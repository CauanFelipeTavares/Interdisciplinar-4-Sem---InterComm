@model List<Locais>
@{ Layout = "/Views/Shared/Layout.cshtml"; }
@{ ViewData["Title"] = "LOCAIS";}

@* <p><h2 class="text-center">LOCAIS</h2></p> *@


<div class="container d-flex justify-content-center mb-3 mt-3">
    <form action="/locais/search" method="POST" class="input-group mt-0">
        <div class="input-group w-75">
            <select class="form-select" asp-for="TipoLocal" asp-items="Html.GetEnumSelectList<TipoLocal>()">
                <option disabled="" value="" selected="" hidden="">Selecione</option>
            </select>
            <input name="search" class="form-control"/>
            <button class="btn btn-outline-secondary">Pesquisar</button>
        </div>
    </form>
    <a href="/locais/create"><button class="btn btn-primary">Adicionar</button></a>
</div>
<div class="container table-responsive d-flex justify-content-center mt-3">
    <table class="table table-success table-striped">
        <tr>
            <th>ID</th>
            <th>Razao Social</th>
            <th>Nome Fantasia</th>
            <th>CNPJ</th>
            <th>Tipo Local</th>
            @* <th>ANTT</th>
            <th>IE</th>
            <th>CEP</th>
            <th>Logradouro</th>
            <th>Bairro</th> *@
            <th>Cidade</th>
            <th>Estado</th>
            @* <th>Numero</th>
            <th>Complemento</th> *@
            <th>&ensp;</th>
        </tr>
        @foreach (var local in Model)
        {
        <tr>
            <td>@local.IdLocal</td>
            <td>@local.LocalRazaoSocial</td>
            <td>@local.LocalNomeFantasia</td>
            <td>@local.CNPJ</td>
            <td>@local.TipoLocal</td>
            @* <td>@local.ANTT</td>
            <td>@local.IE</td>
            <td>@local.CEP</td>
            <td>@local.Logradouro</td>
            <td>@local.Bairro</td> *@
            <td>@local.Cidade</td>
            <td>@local.Estado</td>
            @* <td>@local.Numero</td>
            <td>@local.Complemento</td> *@
            <td>
                <form action="/locais/update" method="GET" class="mt-0">
                    @* <a href="/locais/update/@local.IdLocal"> *@
                    <input type="hidden" name="Id" value="@local.IdLocal">
                        <button class="btn btn-primary btn-sm">Editar</button>
                    @* </a> *@
                </form>
            </td>
        </tr>
        }
    </table>
</div>
